#include<stdio.h>
int main()
{
    int a=1;
    while(a<=4)
    {
       printf("%d\n", a);
       a++;
    }
    return 0;
}


//sum of digits
#include <stdio.h>
int main()
{
    int no, r, sum, rem;
    printf("Enter a Number : ");
    scanf("%d", &no);
    r= 0;
    sum = 0;
    while (no > 0)
    {
        rem = no % 10;
        r = r + 1;
        sum = sum + rem;
        no = no / 10;
    }   
    printf("The number of digit is %d", r);
    printf("\nThe sum of digit is %d", sum);
    return 0;
}

//my done
#include <stdio.h>
int main()
{
   int no=123;
   int rem=0;
   int sum=0;
    while (no > 0)
    {
        rem = no % 10;
        sum = sum + rem;
        no = no / 10;
    }   
    printf("\nThe sum of digit is %d", sum);
    return 0;
}

//count the no.of digits
#include <stdio.h>
int main()
{
   int no=122143;
   int rem=0;
   int count=0;
    while (no > 0)
    {
        rem = no % 10;
        count++;
        no = no / 10;
    }   
    printf("\nThe no of digit is %d", count);
    return 0;
}


//power of a number
#include <stdio.h>
int main()
{
   int base=2;
   int power=3;
   int result=1;
    while (power > 0)
    {
        result =(base*result);
        power--;
    }   
    printf("%d", result);
    return 0;
}

